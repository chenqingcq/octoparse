            var timer = null ;
            function throttle(method,context){
                clearTimeout(timer);
                timer=setTimeout(function(){
                    method.call(context);
                },300)
            };
            function clearDots(index){
                dots.forEach(function(item,i , arr){
                    item.classList.remove('dot-active');
                    arr[index].classList.add('dot-active');
                })
            }
            function showImages (index){
                for(var i = 0 ; i < imgItmes.length ; i ++){
                    imgItmes[i].classList.add('hidden');
                    imgItmes[i].classList.remove('show');
                };
                imgItmes[index].classList.remove('hidden');
                imgItmes[index].classList.add('show');
            }
